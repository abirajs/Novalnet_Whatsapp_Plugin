{# Handle view file #}
<link rel="stylesheet" href="{{plugin_path('NovalnetWhatsapp')}}/css/novalnetwhatsapp.css">
<script type="text/javascript" src="{{plugin_path('NovalnetWhatsapp')}}/js/novalnetwhatsapp.js"></script>

{# connect to load bootstrap cdn links #}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

{# hidden values are set #}
<input type="hidden" name="nn_whatsapp_desktop_URL" id="nn_whatsapp_desktop_URL" value="{{desktopURL}}">
<input type="hidden" name="nn_whatsapp_mobile_URL" id="nn_whatsapp_mobile_URL" value="{{mobileURL}}">
<input type="hidden" name="nn_whatsapp_open_new_tab" id="nn_whatsapp_open_new_tab" value="{{openNewTab}}">
<input type="hidden" name="nn_whatsapp_is_mobile" id="nn_whatsapp_is_mobile" value="{{isMobile}}">


<div>
<img src="{{plugin_path('NovalnetWhatsapp')}}/images/whatsapp.png" alt="whatsapp-chat" width="45" height="45"  class="whatsappwidget" id="whatsappwidget" style="cursor:pointer;">
</div>
	<div  class="whatsappcontainer" style="display:none;height:260px;width:350px;">
		
		<div class="whatsapp-header" style="height:70px;width:350px;background-color: #075e54;color:white;align-items:center;padding-top:10px;border-radius:6px 6px 0 0;">
			<div style="float:left;padding-left:15px;margin-top:10px; font-weight: bold;">
				{{chatHeading}}
			</div>
			<div class="whatsapp-cancel" style="float:right;padding-right:15px;cursor:pointer; font-weight: bold;">
				X
			</div>
		</div>
		
		<div style="height:60px;width:350px;background-color: white;padding:5px 0px">{{chatDescription}}</div>
		
		<div style="height:85px;width:350px;background-color: white;display:flex;padding:20px 0px" class="member1" id="manager" onclick="whatsapp(1)" phone="{{mobileNumber}}">
			<div><img src="{{plugin_path('NovalnetWhatsapp')}}/images/manager.png" alt="whatsapp-chat" width="50" height="50" style="border-radius: 50%;cursor:pointer"></div>
			<div style="margin-left:10px">
				<div style="font-weight: bold;cursor:pointer" value="{{accountName}}">{{accountName}}</div>
				<div style="cursor:pointer;font-size:14px;" value="{{accountRole}}">{{accountRole}}</div>
			</div>
		</div>
		
		<div style="height:45px;width:350px;background-color: white;padding:1px 0px;text-align:center;font-size: 12px;">
		<hr><span style="margin-bottom:30px;">Plentymarkets</span></div>
	</div>
